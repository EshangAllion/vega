<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_petty_cash_out_reason_tree" model="ir.ui.view">
            <field name="name">petty.cash.out.reason.tree</field>
            <field name="model">petty.cash.reason</field>
            <field name="arch" type="xml">
                <tree string="Petty cash" editable="top" >
                    <field name="name" />
                </tree>
            </field>
        </record>


        <!--   action petty cash Out     -->
        <record id="action_petty_cash_reason" model="ir.actions.act_window">
            <field name="name">Reimbursement Reason</field>
            <field name="res_model">petty.cash.reason</field>
            <field name="view_mode">tree</field>
            <field name="help" type="html">
             <p class="o_view_nocontent_smiling_face">
               Add a Petty cash Out Reason
             </p>
            </field>
        </record>


    </data>
</odoo>
